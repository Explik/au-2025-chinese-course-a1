    "version": "0.2.0",
    "configurations": [
        {
            "name": "Extract chinese from slides folder",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/extract-chinese-from-pdfs.py",
            "console": "integratedTerminal",
            "args": [
                "./slides/",
                "${command:pickArgs}"
            ]
        },
        {
            "name": "Generate (short) flashcards for slides folder",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/generate-flashcards-from-csvs.py",
            "console": "integratedTerminal",
            "args": [
                "./slides/",
                "--one-way",
                "--skip-segmented"
            ]
        },
        {
            "name": "Generate (long) flashcards for slides folder",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/generate-flashcards-from-csvs.py",
            "console": "integratedTerminal",
            "args": [
                "./slides/",
            ]
        }
    ]
}